<Window x:Class="WpfApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="PaleVioletRed" Grid.Row="0" Grid.Column="0"></Grid>
        <Grid Background="PaleGoldenrod" Grid.Row="0" Grid.Column="1"></Grid>
        <Grid Background="PaleTurquoise" Grid.Row="0" Grid.Column="2"></Grid>
        <Grid Background="PaleGreen" Grid.Row="0" Grid.Column="3" Grid.RowSpan="2"></Grid>
        <Grid Background="MediumVioletRed" Grid.Row="1" Grid.Column="0"></Grid>
        <Grid Background="MediumOrchid" Grid.Row="1" Grid.Column="1"></Grid>
        <Grid Background="MediumSeaGreen" Grid.Row="1" Grid.Column="2"></Grid>
        <TextBox x:Name="textBox" Grid.Column="0" Grid.Row="0" Height="30" VerticalAlignment="Top" Width="180" Margin="10" TextChanged="textBox_TextChanged"></TextBox>
        <Label x:Name="label" Content="" Background="White" Grid.Column="0" Grid.Row="0" Height="30" VerticalAlignment="Center" Width="180" Margin="10"></Label>
        <TextBox Grid.Column="2" Grid.Row="0" Height="30" VerticalAlignment="Top" Width="180" Margin="10" TextChanged="textBox_TextChanged"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="0" Height="30" VerticalAlignment="Center" Width="180" Margin="10"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="0" Height="30" VerticalAlignment="Bottom" Width="180" Margin="10"></TextBox>
        <GroupBox Grid.Column="1" Grid.Row="1" Margin="10" VerticalAlignment="Top" Height="120" Header="Ile dziennie się uczysz?">
            <StackPanel>
                <RadioButton>Mniej niż 2h</RadioButton>
                <RadioButton>Między 2h a 5h</RadioButton>
                <RadioButton>Ponad 5h</RadioButton>
                <RadioButton x:Name="xD" Checked="xD_Checked">Inna odpowiedź</RadioButton>
                <TextBox x:Name="Dx" Visibility="hidden" VerticalAlignment="Bottom"></TextBox>
            </StackPanel>
        </GroupBox>
        <StackPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label x:Name="zoomLabel" Content="Powiększanie" FontSize="16" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   MouseEnter="OnLabelMouseEnter" MouseLeave="OnLabelMouseLeave">
                <Label.Style>
                    <Style TargetType="Label">
                        <Style.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="FontSize" To="20" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="FontSize" To="16" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
        </StackPanel>
        <ComboBox IsEditable="True" x:Name="CMO" Grid.Column="2" Grid.Row="1" Width="180" Height="30" VerticalAlignment="Top" Margin="10" SelectionChanged="CMO_SelectionChanged">
            <ComboBoxItem>Jeden</ComboBoxItem>
            <ComboBoxItem>Dwa</ComboBoxItem>
            <ComboBoxItem>Trzy</ComboBoxItem>
            <ComboBoxItem>Cztery</ComboBoxItem>
            <ComboBoxItem>Pięć</ComboBoxItem>
            <ComboBoxItem>Sześć</ComboBoxItem>
            <ComboBoxItem>Siedem</ComboBoxItem>
            <ComboBoxItem>Osiem</ComboBoxItem>
            <ComboBoxItem>Dziewięć</ComboBoxItem>
            <ComboBoxItem>Dziesięć</ComboBoxItem>
        </ComboBox>
        <Label x:Name="label1" Content="" Background="White" Grid.Column="2" Grid.Row="1" Height="30" VerticalAlignment="Center" Width="180" Margin="10"></Label>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="180" Height="30" Margin="10" Grid.Column="1" Grid.Row="0">
            <ToggleButton x:Name="toggleButton" Content="Pokaż Popup" Checked="OnToggleButtonChecked" Unchecked="OnToggleButtonUnchecked"/>
            <Popup x:Name="popup" Width="180" Height="100" PlacementTarget="{Binding ElementName=toggleButton}" StaysOpen="False" Placement="Bottom">
                <Border Background="LightGray" BorderBrush="Black" BorderThickness="1" Padding="10">
                    <TextBlock Text="ToggleButton i Popup"/>
                </Border>
            </Popup>
        </StackPanel>
        <ListBox FontSize="22" Grid.Column="3" Grid.Row="0" Grid.RowSpan="2" Background="PaleGreen">
            <ListBoxItem>Ania Bierze Tren</ListBoxItem>
            <ListBoxItem>Ania Bierze Tren</ListBoxItem>
            <ListBoxItem>Ania Bierze Tren</ListBoxItem>
            <ListBoxItem>Ania Bierze Tren</ListBoxItem>
            <ListBoxItem>Ania Bierze Tren</ListBoxItem>
            <ListBoxItem>Ania Bierze Tren</ListBoxItem>
            <ListBoxItem>Ania Bierze Tren</ListBoxItem>
            <ListBoxItem>Ania Bierze Tren</ListBoxItem>
        </ListBox>
    </Grid>
</Window>
